{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.tsx"]
}